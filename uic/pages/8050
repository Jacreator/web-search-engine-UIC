<script language = "Javascript">

function orgCopy()
{
   document.forms[0].elements[10].value = document.forms[0].elements[7].value;
}

function isAllZeroes(str)
{
  var allZero = "0";
  
  for (var i=0; i<str.length; i++) {
    if (allZero.indexOf(str.charAt(i)) == "-1") {
      return false;
    }
  }
  return true;
}

function validate(field)
{
   var valid = "0123456789"
   var ok = "yes";
   var temp;
   
   for (var i=0; i<field.value.length; i++) 
   {
      temp = "" + field.value.substring(i, i+1);
      if (valid.indexOf(temp) == "-1") ok = "no";
   }
   if (ok == "yes") {
     if (isAllZeroes(field.value)) ok = "no";
   }
   if (ok == "no") 
   {
      alert("Invalid CFOAP entry!\n\nThese are required fields and must be all numeric.\nFields with all zeros are NOT accepted.");
      field.value = "";
      field.select();
      field.focus();
      return false;
   }
   else {
     if (field.value == document.getElementById('orgNum').value)
       orgCopy();
   }
   return true;
}

function validate_all()
{
  var fldNames = ["chartNumber","fundNumber","organizationNumber","programNumber"];
  
  for (var i=0; i<fldNames.length; i++) {
    if (!validate(document.accountForm.elements[fldNames[i]])) {
      return false;
    }
  }
  return true;
}

</script>

</head>

